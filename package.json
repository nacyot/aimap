{
  "name": "aimapper",
  "description": "Universal build tool for managing coding agent rules - Support Claude Code, Cursor, Windsurf, GitHub Copilot, and more",
  "version": "0.2.2",
  "author": "nacyot <propellerheaven@gmail.com>",
  "bin": {
    "aimap": "./bin/run.js"
  },
  "bugs": "https://github.com/nacyot/aimapper/issues",
  "dependencies": {
    "@inquirer/prompts": "^7.7.1",
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/compat": "^1",
    "@oclif/prettier-config": "^0.2.1",
    "@types/node": "^18",
    "eslint": "^9",
    "eslint-config-oclif": "^6",
    "eslint-config-prettier": "^10",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "./bin",
    "./dist",
    "./.aimap.example.yml",
    "./oclif.manifest.json"
  ],
  "homepage": "https://github.com/nacyot/aimapper",
  "keywords": [
    "ai",
    "coding-agent",
    "claude",
    "cursor",
    "windsurf",
    "copilot",
    "amazonq",
    "aider",
    "cline",
    "roocode",
    "rules",
    "instructions",
    "cli",
    "oclif"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "aimap",
    "dirname": "aimap",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " "
  },
  "repository": "nacyot/aimapper",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "npm run build && oclif manifest",
    "test": "vitest run",
    "test:watch": "vitest",
    "version": "oclif readme && git add README.md",
    "changeset": "changeset",
    "changeset:version": "changeset version && npm install --package-lock-only",
    "changeset:publish": "npm run build && changeset publish",
    "release": "npm run build && npm run test && changeset publish"
  },
  "types": "dist/index.d.ts"
}
