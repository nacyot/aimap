# Security settings
# Prevent execution of package scripts during installation
ignore-scripts=false
# Enable audit on every install (optional - can slow down installs)
audit-level=moderate
# Save exact versions instead of semver range
save-exact=false
# Prefer offline mode to use cached packages when available
prefer-offline=false

# Package integrity check
# Force npm to check package signatures
registry=https://registry.npmjs.org/

# Lockfile settings
# Ensure lockfile is always updated
package-lock=true
# Prevent packages from being installed that don't match lockfile
lockfile-version=3

# Package version constraints enforced via package.json overrides