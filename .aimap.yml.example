# aimap configuration file
# Copy this file to .aimap.yml and customize for your project

# Source directory for rule files
source: .rules

# Agents to build for (default: claude only)
# Available: claude, agents, cline, roocode, cursor, windsurf,
#            copilot, amazonq, continue, aider, tabnine, replit,
#            jetbrains, cody, gemini, pieces, tabby, workspace
agents:
  - claude      # Claude (CLAUDE.md with @ import syntax)
  - agents      # Universal multi-agent support (AGENTS.md)
  - cline       # Cline (.clinerules/)
  - roocode     # RooCode (.roo/)
  - cursor      # Cursor (.cursor/rules, .cursorrules)
  - windsurf    # Windsurf (.windsurf/rules, .windsurfrules)
  - copilot     # GitHub Copilot (.github/copilot-instructions.md)
  - amazonq     # Amazon Q (.amazonq/rules/)
  - continue    # Continue.dev (.continue/config.yaml)
  - aider       # Aider (.aider.conf.yml, .aider-rules/)
  - tabnine     # Tabnine (.tabnine)
  - replit      # Replit AI (replit.md)
  - jetbrains   # JetBrains AI Assistant (.jbai/rules.md)
  - cody        # Sourcegraph Cody (.cody.json)
  - gemini      # Google Gemini Code Assist (.gemini/rules.yaml)
  - pieces      # Pieces for Developers (pieces.toml)
  - tabby       # Tabby ML (tabby.yaml)
  - workspace   # GitHub Copilot Workspace (.workspace/rules.yaml)

# Custom output paths (optional)
# outputs:
#   claude: CUSTOM_CLAUDE.md
#   cline: .custom-clinerules
#   copilot: .github/custom-copilot.md